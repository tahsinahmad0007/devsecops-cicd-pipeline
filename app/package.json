{
  "name": "devsecops-app",
  "version": "1.0.0",
  "description": "Simple Express app for DevSecOps CI/CD",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "jest --coverage",
    "lint": "eslint ."
  },
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "supertest": "^6.3.0",
    "eslint": "^8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true,
    "clearMocks": true,
    "testTimeout": 10000,
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  }
}
